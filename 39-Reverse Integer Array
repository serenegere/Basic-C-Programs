/* Integer array : takes length and elements of array as input from user
   and returns reversed array without string library
*/

#include <stdio.h>

int main() {
  int a[50],n,i,j;
  printf("Enter length of array: ");
  scanf("%d",&n);
  printf("Enter integer elements: \n");
  for(i=0;i<n;i++)
    {
      scanf("%d",&a[i]);
    }
  //printing array in actual order
  printf("Actual array is: ");
  for(i=0;i<n;i++)
    printf("%d ",a[i]);
  printf("\n");  
  //printing array in reverse order 
  printf("Reversed array is: ");
  for(i=n-1;i>=0;i--)
    {
      printf("%d ",a[i]);
    }
  return 0;
}
